{
  "compilerOptions": {
    "outFile": "./target/compiled/weblite.js",
    "module": "amd",
    "target": "es5",
    "baseUrl": "./src/ts",
    "rootDir": "./src/ts",
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "noResolve": true,
    // для этапа разработки
    "removeComments": false,
    "sourceMap": true,
    "inlineSources": true
  },
  "include" : [
    "./src/ts",
    "./typings"
  ]
}

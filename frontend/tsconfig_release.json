{
    "compilerOptions": {
        "outFile": "./target/result/lib/frontend.js",
        "module": "amd",
        "target": "ES2015",
        "strict": true,
        "moduleResolution": "node",

        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "baseUrl": "./src/ts",
        "rootDir": "./src/ts",
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,

        "removeComments": true,
        "sourceMap": false,
        "inlineSources": false
    },
    "include" : [
        "./src/ts/lib/require.",
        "./src/ts",
        "./src/ts/components",
        "./src/ts/services",
        "./src/ts/style"
    ]
}

{
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "rootDir": "src",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "baseUrl": "."
  },
  "include": [
    "./src/ts"
  ],
  "exclude": [
    "../node_modules",
    "../build"
  ]
}